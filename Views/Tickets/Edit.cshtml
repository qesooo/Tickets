@model Tickets.Models.Ticket

@{
    ViewData["Title"] = "Editar Ticket";

    // Colores ajustados
    var backgroundPastelBlue = "#ADD8E6"; // Fondo de la página
    var saveButtonColor = "#007bff";     // Azul más oscuro para 'Guardar'
    var backButtonColor = "#F59292";     // Rojo/Salmón pastel para 'Volver a la lista'
}

<style>
    /* 1. ESTILOS GLOBALES Y FONDO */
    body {
        background-color: @backgroundPastelBlue !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* 2. OCULTAR ELEMENTOS INNECESARIOS (Subtítulo y línea divisoria) */
    h4, hr {
        display: none;
    }

    /* 3. CONTENEDOR PRINCIPAL Y CENTRADO */
    .page-content-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px 0;
    }

    .form-container {
        /* Tarjeta blanca para el formulario */
        background-color: white;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 700px; /* Ancho profesional */
        box-sizing: border-box;
    }

    /* 4. TÍTULOS */
    h1 {
        text-align: center;
        color: #333;
        font-weight: 600;
        margin-bottom: 25px;
        font-size: 2em;
    }

    /* 5. CAMPOS DEL FORMULARIO */
    /* Usaremos la estructura de grilla (row y col-md-6) para los pares de campos */
    .form-group-pair .col-md-6 {
        padding: 0 10px; /* Espacio entre las columnas */
    }

        .form-group-pair .col-md-6:first-child {
            padding-left: 0;
        }

        .form-group-pair .col-md-6:last-child {
            padding-right: 0;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: 500;
        color: #555;
        margin-bottom: 5px;
        display: block;
    }

    .form-control, .form-control option {
        border-radius: 6px;
        border: 1px solid #ccc;
        padding: 10px 12px;
        box-shadow: none;
        transition: border-color 0.2s;
        font-size: 1em;
        width: 100%;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    /* 6. BOTONES */
    .btn-action {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 6px;
        font-size: 1.1em;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s, box-shadow 0.2s;
        margin-top: 10px;
        text-decoration: none;
        display: block;
        text-align: center;
    }

    .btn-guardar {
        background-color: @saveButtonColor;
        color: white;
        border: 1px solid @saveButtonColor;
    }

        .btn-guardar:hover {
            background-color: #0056b3;
        }

    .btn-volver {
        background-color: @backButtonColor;
        color: white;
        margin-top: 15px;
    }

        .btn-volver:hover {
            background-color: #e07f7f;
        }
</style>

<div class="page-content-wrapper">
    <div class="form-container">

        <h1>@ViewData["Title"]</h1>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTicket" />

            <div class="row form-group-pair">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Cliente</label>
                        <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Técnico</label>
                        <select asp-for="IdTecnico" class="form-control" asp-items="ViewBag.IdTecnico"></select>
                        <span asp-validation-for="IdTecnico" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row form-group-pair">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Asunto" class="control-label"></label>
                        <input asp-for="Asunto" class="form-control" />
                        <span asp-validation-for="Asunto" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row form-group-pair">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Prioridad" class="control-label"></label>
                        <input asp-for="Prioridad" class="form-control" />
                        <span asp-validation-for="Prioridad" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Fecha de Creación</label>
                        <input asp-for="FechaCreacion" class="form-control" />
                        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <textarea asp-for="Texto" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>

            <div class="row form-group-pair">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Fecha de Cierre</label>
                        <input asp-for="FechaCierre" class="form-control" />
                        <span asp-validation-for="FechaCierre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                </div>
            </div>


            <div class="form-group" style="margin-top: 25px;">
                <input type="submit" value="Guardar" class="btn-action btn-guardar" />
            </div>
        </form>

        <div>
            <a asp-action="Index" class="btn-action btn-volver">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}