@model Tickets.Models.Ticket

@{
    ViewData["Title"] = "Eliminar Ticket"; // CAMBIO: Título en español

    // Colores del proyecto (consistentes con las vistas anteriores)
    var backgroundPastelBlue = "#ADD8E6"; // Fondo de la página
    var deleteButtonColor = "#dc3545";   // Rojo fuerte para el botón de acción "Eliminar" (como el btn-danger original)
    var backButtonColor = "#F59292";     // Rojo/Salmón pastel para 'Volver a la lista'
}

<style>
    /* 1. ESTILOS GLOBALES Y FONDO */
    body {
        /* Fondo de la página: Celeste Pastel */
        background-color: @backgroundPastelBlue !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* 2. OCULTAR ELEMENTOS INNECESARIOS (Subtítulo y línea divisoria original) */
    h3, h4, hr {
        display: none;
    }

    /* 3. CONTENEDOR PRINCIPAL Y CENTRADO */
    .page-content-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center; /* Centrado horizontal */
        align-items: center; /* Centrado vertical */
        padding: 20px 0;
        width: 100%;
    }

    .details-container {
        /* Tarjeta blanca para los detalles */
        background-color: white;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 700px; /* Ancho consistente */
        box-sizing: border-box;
    }

    /* 4. TÍTULOS Y PREGUNTA DE CONFIRMACIÓN */
    h1 {
        /* Título "Eliminar Ticket" centrado */
        text-align: center;
        color: #333;
        font-weight: 600;
        margin-bottom: 5px;
        font-size: 2em;
    }

    .confirmation-question {
        text-align: center;
        color: @deleteButtonColor; /* Resaltar la pregunta en rojo */
        font-size: 1.2em;
        font-weight: 500;
        margin-bottom: 30px;
    }

    /* 5. LISTA DE DETALLES (dl) */
    .dl-custom {
        /* Estilos similares a la vista Detalles */
        display: grid;
        grid-template-columns: 35% 65%;
        gap: 15px 10px;
        margin-bottom: 30px;
    }

        /* Etiquetas (dt) */
        .dl-custom dt {
            font-weight: 600;
            color: #555;
            text-align: right;
            padding-right: 15px;
            word-wrap: break-word;
        }

        /* Valores (dd) */
        .dl-custom dd {
            font-weight: 400;
            color: #333;
            margin-left: 0;
            word-wrap: break-word;
        }

    /* Estilo para el campo Texto */
    .full-width-field {
        grid-column: 1 / -1;
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

        .full-width-field dt, .full-width-field dd {
            text-align: left;
            padding-right: 0;
            grid-column: 1 / -1;
        }

        .full-width-field dt {
            font-size: 1.1em;
            margin-bottom: 5px;
        }

    /* 6. BOTONES (Consistente) */
    .btn-action {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 6px;
        font-size: 1.1em;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-top: 10px;
        text-decoration: none;
        display: block;
        text-align: center;
        color: white; /* Texto blanco para todos los botones de acción */
    }

    /* Botón "Eliminar" (Rojo fuerte) */
    .btn-delete {
        background-color: @deleteButtonColor;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    /* Botón "Volver a la lista" (Rojo/Salmón Pastel) */
    .btn-volver {
        background-color: @backButtonColor;
        margin-top: 10px;
    }

        .btn-volver:hover {
            background-color: #e07f7f;
        }
</style>

<div class="page-content-wrapper">
    <div class="details-container">

        <h1>@ViewData["Title"]</h1>

        <p class="confirmation-question">¿Estás seguro que quieres eliminar este Ticket?</p>

        <dl class="dl-custom">
            <dt>
                @Html.DisplayNameFor(model => model.Asunto)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Asunto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Estado)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Prioridad)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Prioridad)
            </dd>

            <dt>
                Cliente
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdClienteNavigation.Nombre)
            </dd>

            <dt>
                Técnico
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdTecnicoNavigation.Nombre)
            </dd>

            <dt>
                Fecha de Creación
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FechaCreacion)
            </dd>

            <dt>
                Fecha de Cierre
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FechaCierre)
            </dd>

            <div class="full-width-field">
                <dt>
                    @Html.DisplayNameFor(model => model.Texto)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Texto)
                </dd>
            </div>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdTicket" />

            <input type="submit" value="Eliminar" class="btn-action btn-delete" />

            <a asp-action="Index" class="btn-action btn-volver">Volver a la lista</a>
        </form>
    </div>
</div>