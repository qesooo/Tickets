@model Tickets.Models.SeguimientoTicket

@{
    ViewData["Title"] = "Detalles de Seguimiento"; // CAMBIO: Título en español

    // Colores del proyecto (consistentes con las vistas anteriores)
    var backgroundPastelBlue = "#ADD8E6"; // Fondo de la página
    var editButtonColor = "#007bff";     // Azul profesional para 'Editar'
    var backButtonColor = "#F59292";     // Rojo/Salmón pastel para 'Volver a la lista'
}

<style>
    /* 1. ESTILOS GLOBALES Y FONDO */
    body {
        /* Fondo de la página: Celeste Pastel */
        background-color: @backgroundPastelBlue !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* 2. OCULTAR ELEMENTOS INNECESARIOS (Subtítulo y línea divisoria) */
    h4, hr {
        display: none;
    }

    /* 3. CONTENEDOR PRINCIPAL Y CENTRADO */
    .page-content-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center; /* Centrado horizontal */
        align-items: center; /* Centrado vertical */
        padding: 20px 0;
        width: 100%;
    }

    .details-container {
        /* Tarjeta blanca para los detalles */
        background-color: white;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 700px; /* Ancho profesional y consistente */
        box-sizing: border-box;
    }

    /* 4. TÍTULOS */
    h1 {
        text-align: center;
        color: #333;
        font-weight: 600;
        margin-bottom: 25px;
        font-size: 2em;
    }

    /* 5. LISTA DE DETALLES (dl) - Estructura de dos columnas */
    .dl-custom {
        display: grid;
        /* Columna de etiquetas (35%) y columna de valores (65%) */
        grid-template-columns: 35% 65%;
        gap: 15px 10px;
        margin-bottom: 30px;
    }

        /* Etiquetas (dt) */
        .dl-custom dt {
            font-weight: 600;
            color: #555;
            text-align: right;
            padding-right: 15px;
            word-wrap: break-word;
        }

        /* Valores (dd) */
        .dl-custom dd {
            font-weight: 400;
            color: #333;
            margin-left: 0;
            word-wrap: break-word;
        }

    /* Ajuste para el campo 'Mensaje' que podría ser largo */
    .full-width-field {
        grid-column: 1 / -1; /* Ocupa ambas columnas */
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

        .full-width-field dt, .full-width-field dd {
            text-align: left;
            padding-right: 0;
            grid-column: 1 / -1;
        }

        .full-width-field dt {
            font-size: 1.1em;
            margin-bottom: 5px;
        }

    /* 6. BOTONES */
    .btn-action {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 6px;
        font-size: 1.1em;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s, box-shadow 0.2s;
        margin-top: 10px;
        text-decoration: none;
        display: block;
        text-align: center;
        color: white;
    }

    /* Botón "Editar" (Azul profesional) */
    .btn-editar {
        background-color: @editButtonColor;
    }

        .btn-editar:hover {
            background-color: #0056b3;
        }

    /* Botón "Volver a la lista" (Rojo/Salmón Pastel) */
    .btn-volver {
        background-color: @backButtonColor;
        margin-top: 15px;
    }

        .btn-volver:hover {
            background-color: #e07f7f;
        }
</style>

<div class="page-content-wrapper">
    <div class="details-container">

        <h1>@ViewData["Title"]</h1>

        <dl class="dl-custom">

            <dt>
                Ticket
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdTicketNavigation.IdTicket)
            </dd>

            <dt>
                Usuario
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdUsuarioNavigation.IdUsuario)
            </dd>

            <dt>
                Fecha de Seguimiento
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Fecha)
            </dd>

            <div class="full-width-field">
                <dt>
                    @Html.DisplayNameFor(model => model.Mensaje)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Mensaje)
                </dd>
            </div>

        </dl>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.IdSeguimiento" class="btn-action btn-editar">Editar</a>

            <a asp-action="Index" class="btn-action btn-volver">Volver a la lista</a>
        </div>
    </div>
</div>