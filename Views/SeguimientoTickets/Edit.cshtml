@model Tickets.Models.SeguimientoTicket

@{
    ViewData["Title"] = "Editar Seguimiento"; // CAMBIO: Título en español y ajustado

    // Colores consistentes con el proyecto
    var backgroundPastelBlue = "#ADD8E6"; // Fondo de la página
    var saveButtonColor = "#007bff";     // Azul más oscuro para 'Guardar'
    var backButtonColor = "#F59292";     // Rojo/Salmón pastel para 'Volver a la lista'
}

<style>
    /* 1. ESTILOS GLOBALES Y FONDO */
    body {
        /* Fondo de la página: Celeste Pastel */
        background-color: @backgroundPastelBlue !important;
        /* Fuente formal y legible */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* 2. OCULTAR ELEMENTOS INNECESARIOS (Subtítulo y línea divisoria) */
    h4, hr {
        display: none;
    }

    /* 3. CONTENEDOR PRINCIPAL Y CENTRADO */
    .page-content-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center; /* Centrado horizontal */
        align-items: center; /* Centrado vertical */
        padding: 20px 0;
    }

    .form-container {
        /* Tarjeta blanca para el formulario */
        background-color: white;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 700px; /* Ancho profesional */
        box-sizing: border-box;
    }

    /* 4. TÍTULOS */
    h1 {
        /* Título centrado y con estilo */
        text-align: center;
        color: #333;
        font-weight: 600;
        margin-bottom: 25px;
        font-size: 2em;
    }

    /* 5. CAMPOS DEL FORMULARIO Y ESTRUCTURA EN PARES */
    /* Reseteamos el estilo del div.row principal */
    .row {
        margin-left: -10px;
        margin-right: -10px;
    }

        .row > [class^="col-"] {
            padding-left: 10px;
            padding-right: 10px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: 500;
        color: #555;
        margin-bottom: 5px;
        display: block;
    }

    .form-control, .form-control option {
        border-radius: 6px;
        border: 1px solid #ccc;
        padding: 10px 12px;
        box-shadow: none;
        transition: border-color 0.2s;
        font-size: 1em;
        width: 100%;
    }

        .form-control:focus {
            border-color: #007bff; /* Azul profesional al enfocar */
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    /* 6. BOTONES */
    .btn-action {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 6px;
        font-size: 1.1em;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s, box-shadow 0.2s;
        margin-top: 10px;
        text-decoration: none;
        display: block;
        text-align: center;
        color: white; /* Por defecto, texto blanco para contraste */
    }

    /* Botón "Guardar" (Azul Oscuro) */
    .btn-guardar {
        background-color: @saveButtonColor;
        color: white;
        border: 1px solid @saveButtonColor;
        margin-top: 20px; /* Espacio extra sobre los campos */
    }

        .btn-guardar:hover {
            background-color: #0056b3;
        }

    /* Botón "Volver a la lista" (Rojo/Salmón Pastel) */
    .btn-volver {
        background-color: @backButtonColor;
        margin-top: 15px;
    }

        .btn-volver:hover {
            background-color: #e07f7f;
        }
</style>

<div class="page-content-wrapper">
    <div class="form-container">

        <h1>@ViewData["Title"]</h1>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSeguimiento" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Ticket</label> <select asp-for="IdTicket" class="form-control" asp-items="ViewBag.IdTicket"></select>
                        <span asp-validation-for="IdTicket" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Usuario</label> <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Mensaje" class="control-label"></label>
                        <input asp-for="Mensaje" class="form-control" />
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Fecha" class="control-label"></label>
                        <input asp-for="Fecha" class="form-control" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn-action btn-guardar" />
            </div>
        </form>

        <div>
            <a asp-action="Index" class="btn-action btn-volver">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}