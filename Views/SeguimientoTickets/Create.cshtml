@model Tickets.Models.SeguimientoTicket

@{
    ViewData["Title"] = "Agregar Seguimiento";
}

<h1>Agregar Seguimiento al Ticket @ViewBag.IdTicket</h1>

<h4>SeguimientoTicket</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* 1. CAMPO OCULTO para IdTicket (lo recibimos del ViewBag) *@
            <input type="hidden" asp-for="IdTicket" value="@ViewBag.IdTicket" />

            @* 2. Campo IdUsuario y Fecha se eliminan, ya que se asignan en el Controlador *@

            <div class="form-group">
                <label asp-for="Mensaje" class="control-label">Mensaje de Seguimiento</label>
                <textarea asp-for="Mensaje" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar Seguimiento" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    @* Redirigir a los detalles del ticket *@
    <a asp-controller="Tickets" asp-action="Index" asp-route-id="@ViewBag.IdTicket">Volver a la lista de Tickets</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}