<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tickets</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tickets.styles.css" asp-append-version="true" />

    <style>
        /* Estilo para asegurar que el SVG y el texto se vean bien juntos y centrados */
        .home-button-content {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px; /* Espacio entre el ícono y el texto */
            font-weight: 600;
        }

        /* Estilo para el botón "Home" */
        .navbar-brand-custom {
            background-color: #007bff; /* Color azul primario */
            color: white !important;
            padding: 8px 15px;
            border-radius: 8px; /* Bordes suaves */
            text-decoration: none;
            transition: background-color 0.2s;
            line-height: 1;
            /* AJUSTE CLAVE: Mover más a la derecha y abajo */
            margin-left: 20px; /* Aumenta la separación de la izquierda */
            margin-top: 5px; /* Mueve el botón ligeramente hacia abajo */
        }

            .navbar-brand-custom:hover {
                background-color: #0056b3;
            }

            /* Estilo para asegurar que el icono SVG sea blanco */
            .navbar-brand-custom svg {
                fill: white;
                vertical-align: middle;
            }

        /* AJUSTE CLAVE: Eliminar el fondo blanco y el borde de la barra de navegación */
        .custom-navbar {
            background-color: transparent !important; /* Fondo transparente */
            border-bottom: none !important; /* Sin borde */
            box-shadow: none !important; /* Sin sombra */
            /* Aumentamos el padding superior si es necesario para dar espacio al margen superior del botón */
            padding-top: 5px;
            padding-bottom: 5px;
        }
    </style>
</head>
<body>
    @{
        // 1. Retrieve the user's role from the session.
        string usuarioRol = Context.Session.GetString("UsuarioRol");

        // 2. Determine the correct action. Default to "Index" if not logged in or role is not "Tecnico".
        string homeAction = "Index";
        if (usuarioRol == "Tecnico")
        {
            homeAction = "IndexTecnico";
        }
    }
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar mb-3">
            <div class="container-fluid">


                <a class="navbar-brand navbar-brand-custom" asp-area="" asp-controller="Home" asp-action="@homeAction">
                    <span class="home-button-content">

                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">  <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z" /></svg>
                        Volver al Home
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>